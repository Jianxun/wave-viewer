{
  "name": "wave-viewer",
  "displayName": "Wave Viewer",
  "description": "CSV waveform viewer for VS Code",
  "version": "0.0.1",
  "private": true,
  "publisher": "local",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onCommand:waveViewer.openViewer",
    "onCommand:waveViewer.exportPlotSpec",
    "onCommand:waveViewer.importPlotSpec",
    "onCommand:waveViewer.signalBrowser.addToPlot",
    "onCommand:waveViewer.signalBrowser.addToNewAxis",
    "onCommand:waveViewer.signalBrowser.revealInPlot",
    "onCommand:waveViewer.signalBrowser.loadCsvFiles",
    "onCommand:waveViewer.signalBrowser.reloadAllFiles",
    "onCommand:waveViewer.signalBrowser.removeLoadedFile",
    "onView:waveViewer.signalBrowser"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "waveViewer.openViewer",
        "title": "Wave Viewer: Open Active CSV"
      },
      {
        "command": "waveViewer.exportPlotSpec",
        "title": "Wave Viewer: Export Plot Spec (YAML)"
      },
      {
        "command": "waveViewer.importPlotSpec",
        "title": "Wave Viewer: Import Plot Spec (YAML)"
      },
      {
        "command": "waveViewer.signalBrowser.addToPlot",
        "title": "Wave Viewer: Add Signal to Plot"
      },
      {
        "command": "waveViewer.signalBrowser.addToNewAxis",
        "title": "Wave Viewer: Add Signal to New Axis"
      },
      {
        "command": "waveViewer.signalBrowser.revealInPlot",
        "title": "Wave Viewer: Reveal Signal in Plot"
      },
      {
        "command": "waveViewer.signalBrowser.loadCsvFiles",
        "title": "Wave Viewer: Load CSV File..."
      },
      {
        "command": "waveViewer.signalBrowser.reloadAllFiles",
        "title": "Wave Viewer: Reload All Files"
      },
      {
        "command": "waveViewer.signalBrowser.removeLoadedFile",
        "title": "Wave Viewer: Remove Loaded File"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "waveViewer.signalBrowser",
          "name": "Wave Viewer Signals"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "waveViewer.signalBrowser.addToPlot",
          "when": "view == waveViewer.signalBrowser && viewItem == waveViewer.signal",
          "group": "navigation"
        },
        {
          "command": "waveViewer.signalBrowser.addToNewAxis",
          "when": "view == waveViewer.signalBrowser && viewItem == waveViewer.signal",
          "group": "navigation@2"
        },
        {
          "command": "waveViewer.signalBrowser.revealInPlot",
          "when": "view == waveViewer.signalBrowser && viewItem == waveViewer.signal",
          "group": "navigation@3"
        },
        {
          "command": "waveViewer.signalBrowser.removeLoadedFile",
          "when": "view == waveViewer.signalBrowser && viewItem == waveViewer.dataset",
          "group": "navigation@4"
        }
      ],
      "view/title": [
        {
          "command": "waveViewer.signalBrowser.loadCsvFiles",
          "when": "view == waveViewer.signalBrowser",
          "group": "navigation"
        },
        {
          "command": "waveViewer.signalBrowser.reloadAllFiles",
          "when": "view == waveViewer.signalBrowser",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "esbuild src/extension.ts --bundle --platform=node --external:vscode --format=cjs --outfile=dist/extension.js",
    "build:webview": "esbuild src/webview/main.ts --bundle --platform=browser --format=iife --outfile=dist/webview/main.js",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "test:e2e": "vitest run tests/e2e"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "@types/vscode": "^1.90.0",
    "esbuild": "^0.25.0",
    "plotly.js-dist-min": "^3.3.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.6"
  },
  "dependencies": {
    "yaml": "^2.8.2"
  }
}
