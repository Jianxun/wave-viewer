{
  "name": "wave-viewer",
  "displayName": "Wave Viewer",
  "description": "CSV waveform viewer for VS Code",
  "version": "0.0.1",
  "private": true,
  "publisher": "local",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onCommand:waveViewer.openViewer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "waveViewer.openViewer",
        "title": "Wave Viewer: Open Active CSV"
      }
    ]
  },
  "scripts": {
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "esbuild src/extension.ts --bundle --platform=node --external:vscode --format=cjs --outfile=dist/extension.js",
    "build:webview": "esbuild src/webview/main.ts --bundle --platform=browser --format=iife --outfile=dist/webview/main.js",
    "lint": "tsc --noEmit",
    "test": "vitest run"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "@types/vscode": "^1.90.0",
    "esbuild": "^0.25.0",
    "plotly.js-dist-min": "^3.3.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.6"
  },
  "dependencies": {
    "yaml": "^2.8.2"
  }
}
